<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ViewPagerActivity$UserDataFragment1"
    android:weightSum="1">

    <ListView
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:id="@+id/medicationView"
        android:choiceMode="singleChoice"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:scrollIndicators="right"
        android:layout_alignParentEnd="true"
        android:fastScrollEnabled="false"
        android:fastScrollAlwaysVisible="false" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medication"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Diseases"
        android:id="@+id/textView7"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/medicationView"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/DiseasesView"
        android:choiceMode="singleChoice"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:scrollIndicators="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Special needs"
        android:id="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DiseasesView"
        android:layout_alignParentRight="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/specialNeedsView"
        android:choiceMode="singleChoice"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:scrollIndicators="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/addButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/specialNeedsView"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
